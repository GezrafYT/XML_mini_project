<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:background="@color/black"> !-- app background color


    <TextView

        android:textSize="46dp" !-- text size
        android:textColor="#f79bfa" !-- text color
        android:text="title" !-- text
        android:layout_width="wrap_content" !-- text layout type
        android:layout_height="56dp" /> !-- size in pixels (dp)

    <Button
        android:onClick="getMessage" !-- button click event, activates the getMessage() function in MainActivity.java
        android:text="לחץ לקבלת הודעה" !-- button text display
        android:layout_width="200dp" !-- button text width
        android:layout_height="65dp"></Button> !-- button text height
</LinearLayout>
